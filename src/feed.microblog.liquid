---
permalink: "feed.microblog.xml"
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | escape }}</title>
    <description>{{ site.description | escape }}</description>
    <link>{{site.url}}</link>
    <atom:link href="{{site.url}}/feed.xml" rel="self" type="application/rss+xml"/>
    {% for post in collections.posts limit:1000 %}
    {% if post.data.type != "reply" %}
      <item>
        {% assign character_count = post.templateContent | size %}
        {% if character_count > 280 %}
        <title>{{ post.data.title | escape }}</title>
        {% endif %}
        <description>{{ post.templateContent | escape }}</description>
        <pubDate>{{ post.data.date }}</pubDate>
        <link>{{ post.url | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.url }}</guid>
      </item>
      {% endif %}
    {% endfor %}
  </channel>
</rss>