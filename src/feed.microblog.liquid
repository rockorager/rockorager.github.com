---
permalink: feed.json
---

{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ site.title }}",
    "home_page_url": "{{ site.url }}",
    "feed_url": "{{ site.url }}/feed.json",
    "description": "{{ site.description }}",
    "icon": "{{ site.url }}{{ site.logo }}",
    "favicon": "{{ site.url }}/favicon.ico",
    "expired": false,
    "author": {
        "name": "{{ site.author.name }}",
        "url": "{{ site.url }}"
    },
    "items": [
        {% for post in collections.posts %}
        {% if post.data.type != "reply" %}
        {
            "id": "{{ post.url }}",
            "url": "{{ site.url }}{{ post.url }}",
            {% assign character_count = post.templateContent | size %}
            {% if character_count > 280 %}
            "title": "{{ post.data.title }}",
            {% endif %}
            "date_published": "{{ post.date | date_to_xmlschema }}",
            "author": {
                "name": "{{ site.author.name }}",
                "url": "{{ site.url }}",
		    "avatar": "{{site.url}}{{site.logo}}"
            },
            "content_html": "{{ post.templateContent | escape }}"",
            "tags": "{{ post.data.tags | escape }}"
        }{% if forloop.last == false %},{% endif %}
        {% endif %}
        {% endfor %}
    ]
}